<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity">
    <listeners>
        <listener class-name="com.xayn.listeners.ITestListenerImp"/>
        <listener class-name="com.xayn.listeners.AnnotationTransformerImp"/>
    </listeners>
    <test name="IOS">
        <classes>
            <class name="ios.IOSBookmarkingTest"/>
            <class name="ios.IOSNewsFeedTest"/>
            <class name="ios.IOSReaderModeTest"/>
        </classes>
    </test>
    <test name="Android">
        <classes>
            <class name="android.AndroidBookmarkingTest"/>
            <class name="android.AndroidNewsfeedTest"/>
            <class name="android.AndroidReaderModeTest"/>
        </classes>
    </test>
</suite>